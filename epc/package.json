{
  "name": "epc",
  "displayName": "eibstudio",
  "description": "Edit EPC files for the Smart Home Controller EibPC.",
  "version": "0.0.1",
  "publisher": "joergisageek",
  "engines": {
    "vscode": "^1.27.0"
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:extension.sayHello",
    "onCommand:extension.importESF",
    "onView:esfExplorer"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": [
      {
        "title": "EPC encoding",
        "properties": {
          "files.encoding.notsethere": {
            "type": "string",
            "default": "windows1252"
          }
        }
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "esfExplorer",
          "name": "Addresses (ESF imports from ETS)"
        },
        {
          "id": "epcMacros",
          "name": "Macros (Entertex libraries)"
        }
      ],
      "nconf-interactive": [
        {
          "id": "nconf-view-knx",
          "name": "KNX Interface"
        },
        {
          "id": "nconf-view-eibpc",
          "name": "EibPC"
        },
        {
          "id": "nconf-view-options",
          "name": "Options"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nconf-interactive",
          "title": "Entertex EibPC Explorer",
          "icon": "resources/package-explorer.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.sayHello",
        "title": "EPC: Welcome"
      },
      {
        "command": "extension.importESF",
        "title": "EPC: Import *.esf file (export from ETS)"
      },
      {
        "command": "esfExplorer.openFile",
        "title": "EPC: Import and view *.esf file (export from ETS)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "extension.importESF"
        }
      ],
      "view/title": [
        {
          "command": "extension.importESF"
        },
        {
          "command": "esfExplorer.openFile"
        }
      ]
    },
    "languages": [
      {
        "id": "epc",
        "aliases": [
          "EibPC",
          "epc"
        ],
        "extensions": [
          ".epc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "epc",
        "scopeName": "source.epc",
        "path": "./syntaxes/epc-debug.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "epc",
        "path": "./snippets/epc-snippets.json"
      }
    ],
    "themes": [
      {
        "label": "EibPC",
        "uiTheme": "vs",
        "path": "./themes/epc.color-theme.json"
      }
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^10.9.4",
    "typescript": "^3.0.3",
    "vscode": "^1.1.21"
  }
}
