{
  "name": "epc",
  "displayName": "eibstudio",
  "description": "Edit EPC files for the Smart Home Controller Entertex EibPC.",
  "version": "0.0.2",
  "publisher": "joergisageek",
  "engines": {
    "vscode": "^1.27.0"
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:epc",
    "onCommand:extension.sayHello",
    "onCommand:esfExplorer.openFile",
    "onView:esfExplorer",
    "onView:epcMacros",
    "onView:nconf-view-knx"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": [
      {
        "title": "EPC encoding",
        "properties": {
          "files.encoding.notsethere": {
            "type": "string",
            "default": "windows1252"
          }
        }
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "esfExplorer",
          "name": "Addresses (ESF imports from ETS)"
        },
        {
          "id": "epcMacros",
          "name": "Macros (Entertex libraries)"
        }
      ],
      "nconf-interactive": [
        {
          "id": "nconf-view-knx",
          "name": "KNX Interface"
        },
        {
          "id": "nconf-view-eibpc",
          "name": "EibPC"
        },
        {
          "id": "nconf-view-options",
          "name": "Options"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nconf-interactive",
          "title": "Enertex EibPC Explorer",
          "icon": "resources/enertex.png"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.sayHello",
        "title": "Show instructions",
        "category": "EibPC"
      },
      {
        "command": "esfExplorer.openFile",
        "title": "Import *.esf file (export from ETS)",
        "category": "EibPC"
      },
      {
        "command": "esfExplorer.refresh",
        "title": "Refresh Dependecies",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
      },
      {
        "command": "esfExplorer.insertGroupAddress",
        "title": "Insert GA into code",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
      },
      {
        "command": "esfExplorer.writeToBus",
        "title": "Write value to bus",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "esfExplorer.refresh",
          "when": "resourceLangId == epc",
          "group": "navigation",
          "icon": {
            "light": "resources/light/refresh.svg",
            "dark": "resources/dark/refresh.svg"
          }
        }
      ],
      "view/item/context": [
        {
          "command": "esfExplorer.insertGroupAddress",
          "when": "resourceLangId == epc",
          "group": "Action"
        },
        {
          "command": "esfExplorer.writeToBus",          
          "group": "Action"
        }
      ],
      "view/title": [
        {
          "command": "extension.sayHello",
          "group": "Action"
        },
        {
          "command": "esfExplorer.openFile",
          "when": "resourceLangId == epc",
          "group": "EibPC"
        }
      ]
    },
    "languages": [
      {
        "id": "epc",
        "aliases": [
          "EibPC",
          "epc"
        ],
        "extensions": [
          ".epc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "epc",
        "scopeName": "source.epc",
        "path": "./syntaxes/epc.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "epc",
        "path": "./snippets/epc-snippets.json"
      }
    ],
    "themes": [
      {
        "label": "EibPC",
        "uiTheme": "vs",
        "path": "./themes/epc.color-theme.json"
      }
    ]
  },
  "dependencies": {
    "csv": "^3.1.0",
    "event-stream": "^3.3.6",
    "iconv-lite": "^0.4.24"
  },
  "devDependencies": {
    "@types/node": "^10.9.4",
    "typescript": "^3.0.3",
    "vscode": "^1.1.21"
  }
}
